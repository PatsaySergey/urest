                                <label class="title">Пол</label>
                                <div class="box-radio">
                                    <label class="radio-inline">
                                        <input type="radio"  class="btn-radio" name="netcast_urest_user_registration[{{ reg_form_m.gender.vars.name }}]"  value="m"> муж
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" class="btn-radio" name="netcast_urest_user_registration[{{ reg_form_m.gender.vars.name }}]" id="women" checked value="f"> жен
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="box-input">
                            <label class="title" for="login1">{{ 'site.login_name'|trans({},'NetcastUrestMainBundle') }}</label>
                            {{ form_widget(reg_form_m.email) }}
