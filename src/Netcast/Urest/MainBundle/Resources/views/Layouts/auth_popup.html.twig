                        <a href=""><i class="fa fa-facebook icon-rounded"></i></a>
                        <a href=""><i class="fa fa-google-plus icon-rounded"></i></a>
                    </div>
                    <div class="modal-footer">
                        <a class="btn" id="regBtnMob"><i class="fa fa-chevron-right"></i> {{ 'site.registered'|trans({},'NetcastUrestMainBundle') }}</a>
                    </div>
                </div>
                <div class="authorization switch-tab-off" style="display:none;">
                    <form id="enterFormMob" action="{{ path('fos_user_security_check') }}">
                        <div class="box-input">
                            <label class="title" for="login">{{ 'site.login_name'|trans({},'NetcastUrestMainBundle') }}</label>
                            <input type="text" id="login" name="_username" class="form-control">
                        </div>
                        <div class="box-input box-password">
                            <label class="title" for="password">{{ 'site.password'|trans({},'NetcastUrestMainBundle') }}</label>
                            <input type="password" id="password" name="_password" class="form-control">
                        </div>
                    </form>
                    <div class="clearfix"></div>
                    <div class="box-social text-center no-padd">
                        <span>{{ 'site.login_from'|trans({},'NetcastUrestMainBundle') }}:</span>
                        <a href="//loginza.ru/api/widget?provider=facebook&mobile=true" class="loginza"><i class="fa fa-facebook icon-rounded"></i></a>
