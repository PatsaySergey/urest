                    <div class="modal-footer">
                        <a class="btn" id="enterBtnMob"><i class="fa fa-chevron-right"></i> {{ 'site.login'|trans({},'NetcastUrestMainBundle') }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


