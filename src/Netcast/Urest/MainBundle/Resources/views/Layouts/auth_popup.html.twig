                        <div class="box-input">
                        {{ form_widget(reg_form_m.plainPassword) }}
                        </div>
                        {{ form_widget(reg_form_m._token) }}
                    </form>
                    <div class="clearfix"></div>
                    <div class="box-social text-center">
