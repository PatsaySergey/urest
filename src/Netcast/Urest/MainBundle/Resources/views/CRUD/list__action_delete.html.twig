{% if admin.isGranted('DELETE', object) and admin.hasRoute('delete') %}
    <a href="{{ admin.generateObjectUrl('delete', object) }}" class="btn btn-danger btn-sm btn-icon icon-left" title="{{ 'action_delete'|trans({}, 'SonataAdminBundle') }}">
        <i class="entypo-cancel"></i>
        {% if object.deleted is defined and object.deleted %}
            {{ 'action_delete_forever'|trans({}, 'NetcastUrestMainBundle') }}
        {% else %}
            {{ 'action_delete'|trans({}, 'SonataAdminBundle') }}
        {% endif %}
    </a>
{% endif %}
