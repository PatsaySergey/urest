{%- spaceless -%}
<!doctype html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="format-detection" content="telephone=no">
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>U-Rest - туристический сайт</title>

        <!-- Fonts -->
        <link href='//fonts.googleapis.com/css?family=Roboto+Slab:400,700,300&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
        <link href='//fonts.googleapis.com/css?family=Roboto:400,100,300,700&subset=cyrillic,latin' rel='stylesheet' type='text/css'>
        <!-- /Fonts-->

        {% block css %}
            {% stylesheets filter='cssrewrite'
                'bundles/netcasturestmain/css/application.css'
                'bundles/netcasturestmain/css/style.css'
                'bundles/netcasturestmain/js/libs/owl-carousel/owl.carousel.css'
                'bundles/netcasturestmain/js/libs/owl-carousel/owl.theme.css'
                'bundles/netcasturestmain/js/libs/form-styler/jquery.formstyler.css'
                'bundles/netcasturestmain/js/libs/datepicker/daterangepicker-bs3.css'
                'bundles/netcasturestmain/js/libs/bootstrap-datetimepick/bootstrap-datetimepicker.min.css'
                'bundles/netcasturestmain/js/libs/jquery-switch/jquery.switchButton.css'
                'bundles/netcasturestmain/js/libs/thumb-scroller/thumb-scroller.css'
                'bundles/netcasturestmain/js/libs/jquery-mmenu/css/jquery.mmenu.all.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock css %}
        {% block pageCss %}
        {% endblock pageCss %}
    </head>
    <body>
        <div id="wrapper">
            {% block header %}
                <header>
                    <div class="header-upper hidden-xs">
                        <div class="container">
                            <div class="header-upper-inner">
                                <div class="col-md-7 col-sm-7 no-padd">
                                    <form action="{{ url('netcast_urest_search') }}" method="GET">
                                    <ul class="search-group">
                                        <li class="field-search">
                                            <i class="fa fa-search"></i>
                                            <input name="type" type="hidden" class="jsTypeInput" value="all"/>
                                            <input class="searchbox-inputtext" name="search" type="text" placeholder="{{ 'site.search'|trans({},'NetcastUrestMainBundle') }}"/>
                                        </li>
                                        <li class="select-box dropdown search-dropdown">
                                            <a href="" class="search-txt search-first">{{ 'site.search'|trans({},'NetcastUrestMainBundle') }}</a>

                                            <a href="" class="search-txt search-second" data-toggle="dropdown">
                                                <span class="btn-label">{{ 'site.search_all'|trans({},'NetcastUrestMainBundle') }}</span>
                                                <i class="fa fa-angle-down"></i>
                                            </a>
                                            <ul class="dropdown-menu jsSearchType">
                                                <li><a href="#" data-type="all">{{ 'site.search_all'|trans({},'NetcastUrestMainBundle') }}</a></li>
                                                <li><a href="#" data-type="tour">{{ 'site.search_tour'|trans({},'NetcastUrestMainBundle') }}</a></li>
                                                <li><a href="#" data-type="blog">{{ 'site.search_blog'|trans({},'NetcastUrestMainBundle') }}</a></li>
                                                <li><a href="#" data-type="info">{{ 'site.search_info'|trans({},'NetcastUrestMainBundle') }}</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                    </form>
                                </div>
                                <div class="col-md-5 col-sm-5 no-padd">
                                    <div class="nav-group pull-right">
                                        <ul class="nav navbar-nav navbar-right">
                                            <li class="user-bar hidden-sm hidden-xs">
                                                <i class="fa fa-user"></i>
                                                {% if app.user %}
                                                    <span><a href="{{ url('netcast_urest_profile_view') }}"> {{ app.user.firstname }} {{ app.user.lastname }} </a></span>
                                                    <span>|</span>
                                                    <span><a href="{{ url('sonata_user_security_logout') }}"> {{ 'site.logout'|trans({},'NetcastUrestMainBundle') }}</a></span>
                                                {% else %}
                                                    <span><a href="" data-toggle="modal" data-target="#signup-modal"> {{ 'site.login'|trans({},'NetcastUrestMainBundle') }} </a></span>
                                                    <span>/</span>
                                                    <span><a href="" data-toggle="modal" data-target="#login-modal"> {{ 'site.registration'|trans({},'NetcastUrestMainBundle') }}</a></span>
                                                {% endif %}
                                            </li>
                                            <li class="select-box price">
                                                {{ getLanguages() }}
                                            </li>
                                            <li class="select-box price">
                                                {{ getCurrencies() }}
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <nav class="navbar main-menu affix-top" data-spy="affix" data-offset-top="50">
                        <div class="container">
                            <div class="col-xs-4 col-sm-4 visible-xs visible-sm no-padd">
                                <a href="#menu-mobile" class="menu-bars pull-left"><i class="fa fa-bars"></i></a>
                            </div>
                            <div class="col-xs-4 col-sm-4 visible-xs visible-sm no-padd">
                                <a href="{{ url('netcast_urest_main_page') }}" class="logo-img text-center visible-sm">
                                    <img src="{{ asset('bundles/netcasturestmain/img/footer-logo.png') }}" alt=""/>
                                </a>
                                <a href="#" class="logo-img text-center visible-xs">
                                    <img src="{{ asset('bundles/netcasturestmain/img/header-logo-small.png') }}" alt=""/>
                                </a>
                            </div>
                            <div class="col-xs-4 col-sm-4 visible-xs visible-sm no-padd">
                                <a href="" class="menu-user pull-right"  data-toggle="modal" data-target="#login-modal-mobile"><i class="fa fa-user"></i></a>
                            </div>
                            <div class="navbar-header">
                                <a class="navbar-brand brand-container nobg hidden-sm hidden-xs" href="{{ url('netcast_urest_main_page') }}">
                                    <span class="bg-logo-big"></span>
                                    <img class="logo-big" src="{{ asset('bundles/netcasturestmain/img/footer-logo.png') }}" alt="logo"/>
                                    <img class="logo-small" src="{{ asset('bundles/netcasturestmain/img/header-logo-small.png') }}" alt="logo"/>
                                </a>
                            </div>
                            <a href="{{ url('netcast_urest_tour_builder') }}" class="pull-right btn btn-builder hidden-sm hidden-xs">Tour Builder</a>
                            <ul class="nav navbar-nav navbar-right hidden-sm hidden-xs">
                                {% include "NetcastUrestMainBundle:Layouts:main_menu.html.twig" %}
                            </ul>
                        </div>
                    </nav>
                </header>
            {% endblock header %}
            <main>
                <div id="content">
                    {% block content '' %}
                </div>
            </main>
            {% block footer %}
                <footer class="clearfix">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="container">
                                <div class="col-md-2 col-sm-12 col-xs-12 no-padd">
                                    <div class="footer-menu">
                                        <div class="footer-logo">
                                            <a href=""><img src="{{ asset('bundles/netcasturestmain/img/footer-logo.png') }}" alt="logo"/></a>
                                        </div>
                                        <nav class="hidden-xs hidden-sm">
                                            <ul>
                                                {% include "NetcastUrestMainBundle:Layouts:main_menu.html.twig" %}
                                            </ul>
                                        </nav>
                                    </div>
                                </div>
                                <div class="col-md-10 col-sm-12 col-xs-12 no-padd">
                                    {% include "NetcastUrestMainBundle:Layouts:footer_slider.html.twig" %}
                                </div>

                                <div class="clearfix"></div>
                                <div class="social-copyright">
                                    <div class="col-sm-6 col-xs-12 no-padd">
                                        <div class="social">
                                            <ul class="social-network">
                                                <li>
                                                    <a href="#">
                                                        <i class="fa fa-facebook iconRounded"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="">
                                                        <i class="fa fa-twitter iconRounded"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#"><i class="fa fa-google-plus iconRounded"></i></a>
                                                </li>
                                                <li>
                                                    <a href="#"><i class="fa fa-linkedin iconRounded"></i></a>
                                                </li>
                                                <li>
                                                    <a href="#"><i class="fa fa-pinterest iconRounded"></i></a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="clearfix big-spacer visible-xs"></div>
                                    <div class="col-sm-6 col-xs-12 no-padd">
                                        <div class="copyright">&copy; URest, 2014</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </footer>
            {% endblock footer %}
        </div>

        <nav id="menu-mobile">
            <ul>
                {% include "NetcastUrestMainBundle:Layouts:main_menu.html.twig" %}
            </ul>
        </nav>
        {% include "NetcastUrestMainBundle:Layouts:auth_popup.html.twig" %}

        {% block scripts %}
            <!--js-->
            {#<script src="//loginza.ru/js/widget.js" type="text/javascript"></script>#}
            {#<script type="text/javascript">
                LOGINZA.token_url = '{{ url('fos_user_registration_loginza_check', {}, false)|url_encode }}';
            </script>#}
            <script src="https://maps.google.com/maps/api/js?sensor=true"></script>
            <script type="text/javascript" src="https://google-maps-utility-library-v3.googlecode.com/svn/trunk/infobox/src/infobox.js"></script>
            {% javascripts
                '@NetcastUrestMainBundle/Resources/public/js/libs/jquery/jquery.min.js'
                '@NetcastUrestMainBundle/Resources/public/js/libs/owl-carousel/owl.carousel.js'
                '@NetcastUrestMainBundle/Resources/public/js/libs/form-styler/jquery.formstyler.min.js'
                '@NetcastUrestMainBundle/Resources/public/js/libs/datepicker/moment.js'
                '@NetcastUrestMainBundle/Resources/public/js/libs/datepicker/daterangepicker.js'
                '@NetcastUrestMainBundle/Resources/public/js/libs/bootstrap-datetimepick/bootstrap-datetimepicker.min.js'
                '@NetcastUrestMainBundle/Resources/public/js/libs/jquery-ui.min.js'
                '@NetcastUrestMainBundle/Resources/public/js/libs/responsive-paginate.js'
                '@NetcastUrestMainBundle/Resources/public/js/libs/thumb-scroller/jquery.thumb-scroller.js'
                '@NetcastUrestMainBundle/Resources/public/js/libs/jquery-mmenu/js/jquery.mmenu.min.js'
                '@NetcastUrestMainBundle/Resources/public/js/libs/jquery-mmenu/js/jquery.mmenu.min.all.js'
                '@NetcastUrestMainBundle/Resources/public/js/libs/gmaps.js'
                '@NetcastUrestMainBundle/Resources/public/js/libs/user.js'
                '@NetcastUrestMainBundle/Resources/public/js/custom.js'
                '@NetcastUrestMainBundle/Resources/public/js/libs/bootstrap/bootstrap.js'
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
            <!--#js-->
        {% endblock scripts %}

        {% block pageScripts %}
        {% endblock pageScripts %}
    </body>
</html>
{%- endspaceless -%}